<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tag_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="42dp"
        android:text="Selected Tags"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/chip_group_ingredients"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacingVertical="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/tag"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_green_chillies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-fiction" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_ginger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romance" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_onion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science Fiction" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_coriander_powder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_eggs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biography" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_cloves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Philosophy" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_red_chill_powder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Children's books" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_amchurr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poetry" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ingredient_karela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiction" />


    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Read now"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_group_ingredients" />

</androidx.constraintlayout.widget.ConstraintLayout>